/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/**截取过长字符串*/
.ell{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
/**分割线*/
.cut-off{
    width:100%;
    height:10rpx;
    background:#eee;
    margin-top:5px;
    margin-bottom:5px;
}

/*箭头*/
.arrow{
    display: flex;
    align-items: center;
}
.arrow::after{
    content:"";
    width:15rpx;
    height:15rpx;
    border-top:3rpx solid #666;
    border-right:3rpx solid #666;
    transform: rotate(45deg);
}