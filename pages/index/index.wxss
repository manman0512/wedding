.recommend{
    width:100%;
    height:80rpx;
    text-align: center;
    margin:10px;
    margin-bottom:0px;
}
.recommend .line,.recommend .title{
    display: inline-block;
    font-size:18px;
    color:#333;
}
.recommend .line{
    width:120rpx;
    border-top:1px solid #ddd;
    vertical-align: 5px;
    margin:0 10px;
}
.uploadWrap{
    height:160rpx; 
    width:100%; 
    display: flex;
    display: -webkit-box; 
     flex-direction: column; 
