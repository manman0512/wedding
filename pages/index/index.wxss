    display:flex;
    flex-wrap: wrap;
}
.index-nav .nav-item{
    width:20%;
    height:150rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color:#333;
    font-size:12px;
}
.index-nav .nav-item image{
    width:100rpx;
    height:100rpx;
}
.divider{
    height:30rpx;
    background-color:#f1f1f1;
}
