/* pages/product/product.wxss */
page{
    background: #eee;
}
/*轮播*/
.slider,.slider swiper,.slider image{
    height:350rpx;
    width:100%;
}
/*店家信息*/
.shop-info{
    width:100%;
    height:160rpx;
    margin:20rpx 0 0 0;
    display: flex; 
     justify-content: space-around; 
     align-items: center; 
    font-size:14px;
    text-align: left;
    background: #fff;
    padding:20rpx 0;
}
.shop-info .shop-img{
    width:200rpx;
}
.shop-info .shop-center{
    width:400rpx;
    position: relative;
}
.shop-info .shop-name{
    margin:10rpx 0;
    font-size:16px;
}
.shop-info .shop-center .shop-detail{
    width:120rpx;
    height:40rpx;
    /* display: inline-block; */
    font-size: 12px;
    line-height: 40rpx;
}
.shop-info .shop-center .shop-visited{
    position:absolute;
    top:66rpx;
    right:100rpx;
    font-size: 12px;
}
.shop-info .shop-img image{
    width:160rpx;
    height:160rpx;
    border-radius: 50%;
    margin:20rpx;
}
.shop-info .shop-collect{
    width:150rpx;
    padding-right:20rpx;
}
.shop-info .shop-collect .coll,.shop-count .lingqu{
    display: inline-block;
    width: 150rpx;
    height:50rpx;
    background:#3AA9F1;
    line-height: 50rpx;
    text-align: center;
    border-radius: 22rpx;
    color:#fff;
    font-size:14px;
}
.shop-info .shop-collect .coll.cansel,.shop-count .lingqu.cansel{
     background:#999;
}
/*优惠券*/
.shop-count{
    margin:0 30rpx;
    height:160rpx;
    background:#fff;
    border-radius: 20rpx;
    display: flex;
}
 .shop-count .manjian{
     width:223rpx;
     height:97rpx;
     line-height: 120rpx;
     
 }
  .shop-count .manjian .manjian-img{
     width:194rpx;
     height:97rpx;
     margin:32rpx 15rpx;
  }
    .shop-count .manjian-detail{
        font-size:12px;
        width:300rpx;
        padding:30rpx 0;
    }
    .shop-count .shop-time{
        width:150rpx;
    }

.shop-count .lingqu{
    margin-top:55rpx;
}
/*所有商品*/
.product .caption{
    background:#fff;
    font-size:14px;
    height:40rpx;
    line-height: 40rpx;
 }
 .product .product-list{
     display: flex;
     flex-wrap: wrap;
     padding:10rpx;
     justify-content: space-between;
 }
  .product .product-item{
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width:48%;
      background: #fff;
      margin:10rpx 0;
      text-align: center;
  }
 .product image{
     width:100%;
     height:340rpx;
 }
 .product .product-item text{
     font-size:14px;
     padding:8rpx 0;
 }