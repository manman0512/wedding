/* pages/product_details/product_detail.wxss */

.content{
    padding:30rpx;
}
.content image{
    width:100%;
    height:500rpx;
}

.content .detail{
    padding:30rpx 0;
    font-size:14px;
    color:#333;
    border-bottom: 2px dotted #333;
    border-top: 2px dotted #333;
    margin:30rpx 0;
    display: flex;
    flex-direction: column;
}
.content .detail text:last-child{
    color:red;
    font-weight:bold;
    padding-top:20rpx;
}
/*商家*/
.shop-info{
    display: flex;
    align-items: center;
    justify-content: space-around;
    box-shadow: 0px 0px 5px 2px #ccc;
    padding:20rpx;
    border-radius: 6rpx;
}
.shop-info image{
    width:160rpx;
    height:160rpx;
    border-radius: 50%;
}
.shop-info .title{
    font-size:14px;
    font-weight: bold;
}
.shop-info .title~text{
    font-size:12px;
    color:#666;
    margin-right:20rpx;
}
.shop-info .nav{
    /* background: red; */
    padding:12rpx;
    border: 1px solid #ccc;
    font-size:14px;
    color:#666;
    border-radius: 4rpx;
}
/*商品介绍*/
.intr{
    font-size:18px;
    font-weight: bold;
    margin-top:20rpx;
    padding-bottom:20rpx;
    border-bottom:1px solid #ddd;
}
.intr+image{
    margin-top:20rpx;
}
.intr image~image{
    margin-top:10rpx;
}
/*底部导航*/
.tabnav{
    position:fixed;
    bottom:0;
    left:0;
    width:100%;
    height:100rpx;
    background:#fff;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    padding-left: 30rpx;
    box-sizing: border-box;
}
.tabnav .nav-item{
    font-size:12px;
    color:#333;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-left: 10rpx;
}
.tabnav image{
    width:48rpx;
    height:48rpx;
}
.tabnav .nav-item .yuyue{
    width:200rpx;
    height:100rpx;
    background:red;
    line-height: 100rpx;
    color:#fff;
    text-align: center;
}